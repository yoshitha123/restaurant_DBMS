{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ES2020",
        "jsx": "react-jsx",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "baseUrl": ".",
        "paths": {
            "@components/*": ["./src/components/*"],
            "@assets/*": ["./src/public/assets/*"],
            "@config/*": ["./src/config/*"]
        }
    },
    "exclude": ["node_modules", "**/node_modules/*"]
}
